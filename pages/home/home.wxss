.main-container {
  height:100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;
  transition: all;
}



.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 100rpx 0 20rpx;
  border-radius: 50%;
  border: solid 4rpx #EAEAEA
}

.userinfo-nickname {
  color: #f1f2f3;
}

/* fade */
.container-fade{
  opacity: 0.5;
}

/* picpop */
.picpop{
  position: absolute;
  z-index: 10;
  opacity: 1.0;
  width: 90%;
  height: 88%;
  padding: 9.5% 5%;
}

/* pages/home/home.wxss */
page {
  height: 100%;
}

.page-head{
  width: 100%;
  height:33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: space-between; */
  /* box-sizing: border-box; */
}

.page-bar{
  padding: 0 1.9%;
  width: 96.2%;
  height: 19%;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.page-bar-item{
  background-color: #ffffff;
  height: 100%;
  flex-direction: column;
}

.page-bar-item image{
  margin: 14.6% 14.3% 4.1%;
  height: 55.9%;
  width: 71.4%;
}

.page-bar-item view{
  font-size:32rpx;
  color:black;
  padding: 1.4% auto 0;
  text-align:center;
}

.page-line{
  background-color: #EAEAEA;
  width: 100%;
  height:0.5%;
}

.page-body{
  width: 100%;
  height:48.5%;
  background: #fff;
}

.page-body-title{
  padding: 4% 0 2rpx;
  font-family:"微软雅黑",arial;
  font-size: 32rpx;
  font-weight: 900;
  text-align:center;
}

.page-body-text{
  font-family:"微软雅黑",arial;
  font-size: 26rpx;
  text-align:center;
}

.page-body-spacing{
  margin: 5% auto 5%;
  width: 90%;
  height: 56%;
  display: flex;
  flex-direction:row;
}

.page-body-spacing-pic{
  height: 100%;
  width: 30%;
  margin: 0 2.5% 0;
  border: solid 3rpx #EAEAEA;
}

