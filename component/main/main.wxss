/* pages/guide/component/main/main.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

page{
  height:100%;
  background: #f1f2f3;
}

.page-body{
  width: 100%;
  height: 92%;
  background-size: 100% 100%;
}


.page-foot{
  height: 8%;
  background-color: #f2f2f2;
  width: 100%;
}

.page-foot:active{
  background-color: #afafaf;
}

.page-foot:hover{
  opacity: 1;
}

.page-foot image{
  position: relative;
  top: 25%;
  left: 46%;
  height: 50%;
  width: 8%;
}